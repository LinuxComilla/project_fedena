<script src="/javascripts/jquery/jquery-1.3.2.min.js" type="text/javascript"></script>
<script src="/javascripts/jquery/jquery-ui.min.js" type="text/javascript"></script>
<script type="text/javascript">
$(function(){
  $("#academic_year_start_date").datepicker({ dateFormat : 'yy-mm-dd', yearRange : '-5:+5' });
  $("#academic_year_end_date").datepicker({ dateFormat : 'yy-mm-dd', yearRange : '-5:+5' });
});
</script>

<div id="content-header">
  <img src="/images/show_news/show_news_logo.png" />
  <h1>Academic Year</h1>
  <h3>Set up</h3>
  <div id="app-back-button"> <%= link_to image_tag("/images/buttons/back.png", :border => 0), :back %> </div>
</div>

<div id="page-yield">

  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>

  <div id="top-message">Current Academic Year: <br/>
  <ul>
    <%= "<li>From : " + @current_year.start_date.strftime("%d, %B %Y") + "</li>" unless @current_year.nil? %>
    <%= "<li>To : " + @current_year.end_date.strftime("%d, %B %Y") + "</li>" unless @current_year.nil?  %>
  </ul>
    </div>
  <% form_for :academic_year do |f| %>

    <%= error_messages_for 'academic_year' %>

    <div class="label_field_pair">
      <label for="academic_year_start_date">Start date</label>
      <div class="text_input_bg"><%= f.text_field :start_date, :autocomplete => "off" %></div>
    </div>

    <div class="label_field_pair">
      <label for="academic_year_end_date">End date</label>
      <div class="text_input_bg"><%= f.text_field :end_date,:autocomplete => "off" %></div>
    </div>

    <%= image_submit_tag "/images/buttons/create.png", :class => "user_submit_button" %>
  <% end %>

</div>