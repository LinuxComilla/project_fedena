<div id="content-header">
  <img src="/images/examination/index/page_logo.jpg" alt="" />
  <h1>Examination results</h1>
  <h3>Add or edit results</h3>
  <div id="app-back-button">
    <%= link_to image_tag("/images/buttons/back.png", :border => 0), :back %>
  </div>
</div>

<div id="page-yield">

  <% unless flash[:notice].nil? %><p class="flash-msg"> <%= flash[:notice] %> </p><% end %>

  <div id="form-content">
    <div class="text-input-bg">
      <%= select :examination_result, :course_id, @courses.map { |c| [c.grade + " - " + c.section, c.id] },
        {:prompt => "Select class"},
        {:onChange => "#{remote_function(:url => {:action => "update_subjects"}, :with => "'course_id='+value")}"} %>
    </div>
    <div id="subjects1"> <%= render :partial => 'subjects', :object => @subjects %></div>
    <div id="exams1"> <%=render :partial => 'exams', :object => @exams %> </div>
  </div>
  <div id="exam_result"></div>
</div>